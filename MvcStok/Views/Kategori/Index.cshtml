@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
    <tbody>
        <tr>
            <th>@item.KATEGORIID</th>
            <td>@item.KATEGORIAD</td>
            <td><a href="/KATEGORI/SIL/@item.KATEGORIID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.KATEGORIID" class="btn btn-warning">Guncelle</a></td>
        </tr>
    </tbody>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<td><a href="/KATEGORI/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a></td>